# Format String
#
# Store the string 'Zed A. Shaw' in a variable named my_name
my_name = 'Zed A. Shaw'

# Store the number 35 in a variable named my_age
my_age = 35

# Store the number 74 in a variable named my_height
my_height = 74

# Store the number 180 in a variable named my_weight
my_weight = 180

# Store the string 'Blue' in a variable named my_eyes
my_eyes = 'Blue'

# Store the string 'White' in a variable named my_teeth
my_teeth = 'White'

# Store the string 'Brown' in a variable named my_hair
my_hair = 'Brown'

print "Let's talk about %s." % my_name
print "He's %d inches tall." % my_height
print "He's %d pound heavy." % my_weight
print "Actually that's not too heavy."
print "He's got %s eyes and %s hair." % (my_eyes, my_hair)
print "His teeth are usually %s depending on the coffee." % my_teeth

# This line is tricky, try to get it exactly right
print "If I add %d, %d, and %d I get %d." % (my_age, my_height, my_weight, my_age + my_height + my_weight)
# If I add 35, 74 and 180 I get 289
